{
  "name": "fullstack-phonebook-application",
  "version": "2.2.0",
  "description": "A modern phonebook application with real-time validation, international phone number support, and comprehensive testing. Originally created for Full Stack Open 2023, modernized in 2025.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cross-env NODE_ENV=development nodemon index.js",
    "dev:client": "wait-on http://localhost:5001 && cross-env webpack-dev-server --open --mode development",
    "start": "cross-env NODE_ENV=production node index.js",
    "start:test": "cross-env NODE_ENV=test node index.js",
    "build": "webpack --mode production",
    "build:client": "webpack --mode production",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "jest --testPathPatterns=\"client/\"",
    "test:watch": "jest --watch",
    "test:backend": "jest --config jest.config.backend.js",
    "test:backend:watch": "jest --config jest.config.backend.js --watch",
    "test:coverage": "npm run test:frontend:coverage && npm run test:backend:coverage",
    "test:frontend:coverage": "jest --testPathPatterns=\"client/\" --coverage",
    "test:backend:coverage": "jest --config jest.config.backend.js --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "eslint": "eslint './**/*.{js,jsx}'",
    "serve": "cross-env webpack-dev-server --open --mode development"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^.+\\.svg$": "jest-svg-transformer",
      "^.+\\.(css|less|scss)$": "identity-obj-proxy"
    }
  },
  "author": "yumeangelica",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "eslint": "^8.57.1",
    "nodemon": "^3.1.10",
    "wait-on": "^8.0.3",
    "xo": "^1.1.1"
  },
  "dependencies": {
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "axios": "^1.10.0",
    "babel-jest": "^30.0.2",
    "babel-loader": "^10.0.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "dotenv": "^16.5.0",
    "dotenv-webpack": "^8.1.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "helmet": "^8.1.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "libphonenumber-js": "^1.12.9",
    "mongoose": "^8.16.0",
    "morgan": "~1.10.0",
    "npm": "^11.4.2",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "style-loader": "^4.0.0",
    "supertest": "^7.1.1",
    "validator": "^13.15.15",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
